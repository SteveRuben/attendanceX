# Configuration pour les tests backend AttendanceX
# Copier ce fichier vers .env.test et ajuster les valeurs

# Environnement
NODE_ENV=test

# Configuration Firebase
FIREBASE_PROJECT_ID=attendance-x-test
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Configuration API
API_URL=http://localhost:5001/attendance-x-test/europe-west1/api
API_VERSION=v1

# Configuration des tests
TEST_TIMEOUT=30000
TEST_PARALLEL_WORKERS=4
TEST_COVERAGE_THRESHOLD=85

# Configuration de la base de données de test
TEST_DB_PREFIX=test_
TEST_CLEANUP_AFTER_TESTS=true

# Configuration des utilisateurs de test
TEST_ADMIN_EMAIL=admin@test.attendancex.com
TEST_ADMIN_PASSWORD=TestAdmin123!
TEST_USER_EMAIL=user@test.attendancex.com
TEST_USER_PASSWORD=TestUser123!

# Configuration des tenants de test
TEST_TENANT_NAME=Test Organization
TEST_TENANT_SLUG=test-org
TEST_TENANT_INDUSTRY=technology

# Configuration des invitations de test
TEST_INVITATION_EXPIRY_DAYS=7
TEST_INVITATION_MAX_BULK=100

# Configuration des événements de test
TEST_EVENT_DURATION_MINUTES=60
TEST_EVENT_GRACE_MINUTES=15

# Configuration de performance
TEST_PERFORMANCE_MAX_RESPONSE_TIME=5000
TEST_PERFORMANCE_CONCURRENT_REQUESTS=10

# Configuration de sécurité
TEST_RATE_LIMIT_WINDOW=900000
TEST_RATE_LIMIT_MAX_REQUESTS=100

# Configuration des notifications de test
TEST_EMAIL_PROVIDER=mock
TEST_SMS_PROVIDER=mock
TEST_PUSH_PROVIDER=mock

# Configuration de logging
TEST_LOG_LEVEL=error
TEST_LOG_FILE=tests/backend/logs/test.log

# Configuration de cache
TEST_CACHE_TTL=300000
TEST_CACHE_MAX_SIZE=1000

# Configuration de monitoring
TEST_METRICS_ENABLED=false
TEST_ANALYTICS_ENABLED=false

# Configuration de développement
TEST_WATCH_MODE=false
TEST_VERBOSE_OUTPUT=false
TEST_DEBUG_MODE=false