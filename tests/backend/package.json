{
  "name": "@attendance-x/backend-tests",
  "version": "1.0.0",
  "description": "Suite de tests compl√®te pour le backend AttendanceX",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:comprehensive": "ts-node comprehensive/run-all-tests.ts",
    "test:auth": "jest --testPathPattern=auth.comprehensive.test.ts",
    "test:invitations": "jest --testPathPattern=user-invitations.comprehensive.test.ts",
    "test:tenants": "jest --testPathPattern=tenant-management.comprehensive.test.ts",
    "test:events": "jest --testPathPattern=events-attendance.comprehensive.test.ts",
    "test:integration": "jest --testPathPattern=api-integration.comprehensive.test.ts",
    "test:unit": "jest unit/",
    "test:integration-only": "jest integration/",
    "test:e2e": "jest e2e/",
    "test:performance": "jest performance/",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "jest --detectOpenHandles --forceExit",
    "clean": "rimraf coverage test-results node_modules/.cache",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "keywords": [
    "attendance",
    "backend",
    "tests",
    "jest",
    "typescript",
    "api",
    "integration"
  ],
  "author": "AttendanceX Team",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "jest-html-reporters": "^3.1.4",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.0",
    "eslint": "^8.36.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "rimraf": "^4.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "rootDir": "../../",
    "testMatch": [
      "<rootDir>/tests/backend/**/*.test.ts",
      "<rootDir>/tests/backend/**/*.spec.ts"
    ],
    "moduleNameMapping": {
      "^../(.*)$": "<rootDir>/backend/functions/src/$1",
      "^@attendance-x/shared$": "<rootDir>/shared/src/index.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/backend/setup/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "backend/functions/src/**/*.ts",
      "!backend/functions/src/**/*.d.ts",
      "!backend/functions/src/index.ts",
      "!backend/functions/src/**/*.interface.ts",
      "!backend/functions/src/**/*.type.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "lcov",
      "json"
    ],
    "coverageDirectory": "<rootDir>/coverage/backend",
    "testTimeout": 30000,
    "clearMocks": true,
    "restoreMocks": true,
    "verbose": true
  }
}