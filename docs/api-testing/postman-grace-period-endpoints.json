{
  "name": "‚è∞ Grace Period Management",
  "description": "Grace period management endpoints for billing transitions",
  "item": [
    {
      "name": "üÜï Create & Manage",
      "item": [
        {
          "name": "Create Grace Period",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"tenantId\": \"{{tenantId}}\",\n  \"durationDays\": 30,\n  \"source\": \"admin_granted\",\n  \"sourceDetails\": {\n    \"reason\": \"Customer support request\"\n  },\n  \"metadata\": {\n    \"supportTicketId\": \"TICKET-123\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/grace-periods",
              "host": ["{{baseUrl}}"],
              "path": ["grace-periods"]
            }
          }
        },
        {
          "name": "Get Grace Period by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/grace-periods/{{gracePeriodId}}",
              "host": ["{{baseUrl}}"],
              "path": ["grace-periods", "{{gracePeriodId}}"]
            }
          }
        },
        {
          "name": "List Grace Periods",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/grace-periods?status=active&limit=50&offset=0&sortBy=createdAt&sortOrder=desc",
              "host": ["{{baseUrl}}"],
              "path": ["grace-periods"],
              "query": [
                { "key": "status", "value": "active" },
                { "key": "limit", "value": "50" },
                { "key": "offset", "value": "0" },
                { "key": "sortBy", "value": "createdAt" },
                { "key": "sortOrder", "value": "desc" }
              ]
            }
          }
        }
      ]
    },
