    {
      "name": "Get All Events",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/events?page=1&limit=20&sortBy=startDate&sortOrder=asc",
          "host": ["{{baseUrl}}"],
          "path": ["events"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "20" },
            { "key": "sortBy", "value": "startDate" },
            { "key": "sortOrder", "value": "asc" }
          ]
        }
      }
    },
    {
      "name": "Get My Events",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/events/my-events?page=1&limit=20",
          "host": ["{{baseUrl}}"],
          "path": ["events", "my-events"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "20" }
          ]
        }
      }
    },
    {
      "name": "Get Upcoming Events",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/events/upcoming?limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["events", "upcoming"],
          "query": [
            { "key": "limit", "value": "10" }
          ]
        }
      }
    },
    {
      "name": "Create Event",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const data = pm.response.json();",
              "    pm.globals.set('eventId', data.data.id);",
              "    pm.test('Event created successfully', () => {",
              "        pm.expect(data.success).to.be.true;",
              "        pm.expect(data.data.id).to.be.a('string');",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Team Meeting\",\n  \"description\": \"Weekly team sync meeting\",\n  \"type\": \"meeting\",\n  \"startDateTime\": \"2024-12-01T10:00:00Z\",\n  \"endDateTime\": \"2024-12-01T11:00:00Z\",\n  \"location\": {\n    \"name\": \"Conference Room A\",\n    \"address\": \"123 Main St\",\n    \"coordinates\": {\n      \"latitude\": 48.8566,\n      \"longitude\": 2.3522\n    }\n  },\n  \"participants\": [],\n  \"isPrivate\": false,\n  \"tags\": [\"meeting\", \"weekly\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/events",
          "host": ["{{baseUrl}}"],
          "path": ["events"]
        }
      }
    },
    {
      "name": "Search Events",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"meeting\",\n  \"filters\": {\n    \"type\": \"meeting\",\n    \"startDate\": \"2024-01-01T00:00:00Z\",\n    \"endDate\": \"2024-12-31T23:59:59Z\"\n  },\n  \"limit\": 20\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/events/search",
          "host": ["{{baseUrl}}"],
          "path": ["events", "search"]
        }
      }
    },
    {
      "name": "Get Event by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/events/{{eventId}}",
          "host": ["{{baseUrl}}"],
          "path": ["events", "{{eventId}}"]
        }
      }
    },
    {
      "name": "Update Event",
      "request": {
        "method": "PUT",
