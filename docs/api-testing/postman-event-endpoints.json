        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Team Meeting\",\n  \"description\": \"Updated weekly team sync meeting\",\n  \"startDateTime\": \"2024-12-01T14:00:00Z\",\n  \"endDateTime\": \"2024-12-01T15:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/events/{{eventId}}",
          "host": ["{{baseUrl}}"],
          "path": ["events", "{{eventId}}"]
        }
      }
    },
