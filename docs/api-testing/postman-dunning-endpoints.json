{
  "name": "ðŸ“ž Dunning Management",
  "description": "Dunning (payment collection) management endpoints",
  "item": [
    {
      "name": "ðŸ“‹ Process Management",
      "item": [
        {
          "name": "Get Dunning Processes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dunning/processes?status=active&limit=50&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "processes"],
              "query": [
                { "key": "status", "value": "active" },
                { "key": "limit", "value": "50" },
                { "key": "offset", "value": "0" }
              ]
            }
          }
        },
        {
          "name": "Get Dunning Process by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dunning/processes/{{processId}}",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "processes", "{{processId}}"]
            }
          }
        },
        {
          "name": "Create Dunning Process",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"invoiceId\": \"{{invoiceId}}\",\n  \"templateId\": \"default\",\n  \"customSteps\": []\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/dunning/processes",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "processes"]
            }
          }
        }
      ]
    },
    {
      "name": "âš¡ Process Actions",
      "item": [
        {
          "name": "Execute Next Dunning Step",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dunning/processes/{{processId}}/execute",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "processes", "{{processId}}", "execute"]
            }
          }
        },
        {
          "name": "Pause Dunning Process",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Customer requested payment extension\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/dunning/processes/{{processId}}/pause",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "processes", "{{processId}}", "pause"]
            }
          }
        },
        {
          "name": "Resume Dunning Process",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dunning/processes/{{processId}}/resume",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "processes", "{{processId}}", "resume"]
            }
          }
        },
        {
          "name": "Cancel Dunning Process",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Payment received outside system\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/dunning/processes/{{processId}}/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "processes", "{{processId}}", "cancel"]
            }
          }
        }
      ]
    },
    {
      "name": "ðŸ“Š Templates & Stats",
      "item": [
        {
          "name": "Get Dunning Templates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dunning/templates",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "templates"]
            }
          }
        },
        {
          "name": "Get Dunning Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/dunning/stats?period=30",
              "host": ["{{baseUrl}}"],
              "path": ["dunning", "stats"],
              "query": [
                { "key": "period", "value": "30" }
              ]
            }
          }
        }
      ]
    }
  ]
