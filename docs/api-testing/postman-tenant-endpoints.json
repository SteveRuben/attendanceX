{
  "name": "🏢 Multi-Tenant",
  "description": "Multi-tenant organization management endpoints",
  "item": [
    {
      "name": "Create Tenant",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const data = pm.response.json();",
              "    pm.globals.set('tenantId', data.data.tenant.id);",
              "    pm.test('Tenant created successfully', () => {",
              "        pm.expect(data.success).to.be.true;",
              "        pm.expect(data.data.tenant.id).to.be.a('string');",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Organization\",\n  \"slug\": \"test-org-{{$randomInt}}\",\n  \"industry\": \"technology\",\n  \"size\": \"50-100\",\n  \"planId\": \"basic\",\n  \"settings\": {\n    \"timezone\": \"Europe/Paris\",\n    \"locale\": \"fr\",\n    \"currency\": \"EUR\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/tenants/register",
          "host": ["{{baseUrl}}"],
          "path": ["tenants", "register"]
        }
      }
    },
    {
      "name": "Get My Tenants",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/tenants",
          "host": ["{{baseUrl}}"],
          "path": ["tenants"]
        }
      }
    },
    {
      "name": "Switch Tenant Context",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenantId\": \"{{tenantId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/tenants/switch-context",
          "host": ["{{baseUrl}}"],
          "path": ["tenants", "switch-context"]
        }
      }
    },
    {
      "name": "Validate Tenant Access",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/tenants/{{tenantId}}/validate",
          "host": ["{{baseUrl}}"],
          "path": ["tenants", "{{tenantId}}", "validate"]
        }
      }
    }
  ]
}