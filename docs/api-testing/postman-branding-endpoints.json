    {
      "name": "Get Tenant Branding",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/branding",
          "host": ["{{baseUrl}}"],
          "path": ["branding"]
        }
      }
    },
    {
      "name": "Update Tenant Branding",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"logoUrl\": \"https://example.com/logo.png\",\n  \"primaryColor\": \"#007bff\",\n  \"secondaryColor\": \"#6c757d\",\n  \"accentColor\": \"#28a745\",\n  \"backgroundColor\": \"#ffffff\",\n  \"textColor\": \"#212529\",\n  \"fontFamily\": \"Inter, sans-serif\",\n  \"customCss\": \".custom-class { color: #007bff; }\",\n  \"favicon\": \"https://example.com/favicon.ico\",\n  \"companyName\": \"My Company\",\n  \"tagline\": \"Excellence in Everything\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/branding",
          "host": ["{{baseUrl}}"],
          "path": ["branding"]
        }
      }
    },
    {
      "name": "Delete Tenant Branding",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/branding",
          "host": ["{{baseUrl}}"],
          "path": ["branding"]
        }
      }
    },
    {
      "name": "Get Preset Themes",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/branding/themes",
          "host": ["{{baseUrl}}"],
          "path": ["branding", "themes"]
        }
      }
    },
    {
      "name": "Apply Preset Theme",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/branding/themes/{{themeName}}",
          "host": ["{{baseUrl}}"],
          "path": ["branding", "themes", "{{themeName}}"]
        }
      }
    },
    {
      "name": "Generate Tenant CSS",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/branding/css",
          "host": ["{{baseUrl}}"],
          "path": ["branding", "css"]
        }
      }
    }
  ]
