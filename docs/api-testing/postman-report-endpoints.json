{
  "name": "ðŸ“Š Reports",
  "description": "Report generation and analytics endpoints",
  "item": [
    {
      "name": "Generate Report",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"attendance_summary\",\n  \"format\": \"pdf\",\n  \"filters\": {\n    \"startDate\": \"2024-01-01T00:00:00Z\",\n    \"endDate\": \"2024-12-31T23:59:59Z\",\n    \"department\": \"IT\"\n  },\n  \"options\": {\n    \"includeCharts\": true,\n    \"includeInsights\": true,\n    \"language\": \"fr\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/reports/generate",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "generate"]
        }
      }
    },
    {
      "name": "Preview Report",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"event_detail\",\n  \"format\": \"json\",\n  \"filters\": {\n    \"eventId\": \"{{eventId}}\"\n  },\n  \"options\": {\n    \"includeCharts\": false,\n    \"includeInsights\": true\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/reports/preview",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "preview"]
        }
      }
    },
    {
      "name": "Get All Reports",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports?page=1&limit=20&sortBy=createdAt&sortOrder=desc",
          "host": ["{{baseUrl}}"],
          "path": ["reports"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "20" },
            { "key": "sortBy", "value": "createdAt" },
            { "key": "sortOrder", "value": "desc" }
          ]
        }
      }
    },
    {
      "name": "Get Report Stats",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/stats",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "stats"]
        }
      }
    },
    {
      "name": "Get Report by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/{{reportId}}",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "{{reportId}}"]
        }
      }
    },
    {
      "name": "Download Report",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/{{reportId}}/download",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "{{reportId}}", "download"]
        }
      }
    },
    {
      "name": "Delete Report",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/{{reportId}}",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "{{reportId}}"]
        }
      }
    },
    {
      "name": "Schedule Report",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Weekly Attendance Report\",\n  \"type\": \"attendance_summary\",\n  \"schedule\": {\n    \"frequency\": \"weekly\",\n    \"dayOfWeek\": 1,\n    \"time\": \"09:00\"\n  },\n  \"recipients\": [\"manager@company.com\"],\n  \"filters\": {\n    \"department\": \"IT\"\n  },\n  \"options\": {\n    \"includeCharts\": true,\n    \"language\": \"fr\"\n  },\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/reports/schedule",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "schedule"]
        }
      }
    },
    {
      "name": "Get Report Templates",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/templates",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "templates"]
        }
      }
    },
    {
      "name": "Generate Attendance Report",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/attendance/{{eventId}}?format=pdf",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "attendance", "{{eventId}}"],
          "query": [
            { "key": "format", "value": "pdf" }
          ]
        }
      }
    },
    {
      "name": "Generate User Report",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports/user/{{userId}}?format=excel&startDate=2024-01-01T00:00:00Z&endDate=2024-12-31T23:59:59Z",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "user", "{{userId}}"],
          "query": [
            { "key": "format", "value": "excel" },
            { "key": "startDate", "value": "2024-01-01T00:00:00Z" },
            { "key": "endDate", "value": "2024-12-31T23:59:59Z" }
          ]
        }
      }
    },
