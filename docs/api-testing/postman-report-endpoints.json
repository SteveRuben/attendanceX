          "host": ["{{baseUrl}}"],
          "path": ["reports", "monthly-summary"],
          "query": [
            { "key": "month", "value": "12" },
            { "key": "year", "value": "2024" },
            { "key": "format", "value": "pdf" }
          ]
        }
      }
    }
  ]
