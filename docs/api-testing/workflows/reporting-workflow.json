{
  "info": {
    "name": "Reporting Workflow",
    "description": "Report-focused workflow: Login ‚Üí Generate Reports ‚Üí Send Notifications. Assumes existing data.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Initialize reporting workflow data",
          "if (!pm.globals.get('reportWorkflowId') || pm.info.requestName.includes('Step 1')) {",
          "    const timestamp = Date.now();",
          "    const reportWorkflowId = 'report_' + timestamp;",
          "    pm.globals.set('reportWorkflowId', reportWorkflowId);",
          "    console.log('üöÄ Starting Reporting Workflow:', reportWorkflowId);",
          "    ",
          "    // Use existing test credentials or set defaults",
          "    if (!pm.globals.get('testEmail')) {",
          "        pm.globals.set('testEmail', 'existing-user@example.com');",
          "        pm.globals.set('testPassword', 'ExistingPassword123!');",
          "    }",
          "}",
          "",
          "console.log('üìç Current Step:', pm.info.requestName);"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{baseUrl}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîê Step 1: Login User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('üîê Executing: User Login for Reporting');",
              "",
              "if (pm.response.code === 200) {",
              "    const data = pm.response.json();",
              "    ",
              "    pm.globals.set('accessToken', data.accessToken);",
              "    pm.globals.set('refreshToken', data.refreshToken);",
              "    pm.globals.set('tokenExpiry', new Date().getTime() + (data.expiresIn * 1000));",
              "    pm.globals.set('userId', data.user.id);",
              "    ",
              "    pm.test('‚úÖ Login successful', () => {",
              "        pm.expect(data.accessToken).to.be.a('string');",
              "        pm.expect(data.user.id).to.be.a('string');",
              "    });",
              "    ",
              "    console.log('‚úÖ Login complete. Proceeding to attendance report...');",
              "    postman.setNextRequest('üìä Step 2: Generate Attendance Report');",
              "} else {",
              "    pm.test('‚ùå Login failed', () => {",
              "        pm.expect.fail(`Login failed: ${pm.response.code}`);",
              "    });",
              "    console.log('‚ùå Login failed. Please check credentials.');",
              "    postman.setNextRequest(null);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "auth": { "type": "noauth" },
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \"email\": \"{{testEmail}}\",\\n  \"password\": \"{{testPassword}}\",\\n  \"rememberMe\": false\\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "üìä Step 2: Generate Attendance Report",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('üìä Executing: Attendance Report Generation');",
              "",
              "if (pm.response.code === 201) {",
              "    const data = pm.response.json();",
              "    ",
              "    pm.globals.set('attendanceReportId', data.data.id);",
              "    ",
              "    pm.test('‚úÖ Attendance report generated successfully', () => {",
              "        pm.expect(data.data.id).to.be.a('string');",
              "        pm.expect(data.data.type).to.equal('attendance_summary');",
              "    });",
              "    ",
              "    console.log('‚úÖ Attendance report generated. ID:', data.data.id);",
              "    console.log('‚û°Ô∏è  Proceeding to event analytics report...');",
              "    postman.setNextRequest('üìà Step 3: Generate Analytics Report');",
              "} else {",
              "    pm.test('‚ùå Attendance report generation failed', () => {",
              "        pm.expect.fail(`Report generation failed: ${pm.response.code}`);",
              "    });",
              "    postman.setNextRequest(null);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \"type\": \"attendance_summary\",\\n  \"format\": \"pdf\",\\n  \"filters\": {\\n    \"startDate\": \"2024-12-01T00:00:00Z\",\\n    \"endDate\": \"2024-12-31T23:59:59Z\",\\n    \"includeAllEvents\": true\\n  },\\n  \"options\": {\\n    \"includeCharts\": true,\\n    \"includeInsights\": true,\\n    \"language\": \"en\",\\n    \"groupBy\": \"event\"\\n  }\\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/reports/generate",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "generate"]
        }
      }
    },
    {
      "name": "üìà Step 3: Generate Analytics Report",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('üìà Executing: Analytics Report Generation');",
              "",
              "if (pm.response.code === 201) {",
              "    const data = pm.response.json();",
              "    ",
              "    pm.globals.set('analyticsReportId', data.data.id);",
              "    ",
              "    pm.test('‚úÖ Analytics report generated successfully', () => {",
              "        pm.expect(data.data.id).to.be.a('string');",
              "        pm.expect(data.data.type).to.equal('analytics');",
              "    });",
              "    ",
              "    console.log('‚úÖ Analytics report generated. ID:', data.data.id);",
              "    console.log('‚û°Ô∏è  Proceeding to report list validation...');",
              "    postman.setNextRequest('üìã Step 4: List Generated Reports');",
              "} else {",
              "    pm.test('‚ùå Analytics report generation failed', () => {",
              "        pm.expect.fail(`Analytics report generation failed: ${pm.response.code}`);",
              "    });",
              "    postman.setNextRequest(null);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \"type\": \"analytics\",\\n  \"format\": \"excel\",\\n  \"filters\": {\\n    \"startDate\": \"2024-12-01T00:00:00Z\",\\n    \"endDate\": \"2024-12-31T23:59:59Z\",\\n    \"metrics\": [\"attendance_rate\", \"event_popularity\", \"user_engagement\"]\\n  },\\n  \"options\": {\\n    \"includeCharts\": true,\\n    \"includeRawData\": true,\\n    \"language\": \"en\"\\n  }\\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/reports/generate",
          "host": ["{{baseUrl}}"],
          "path": ["reports", "generate"]
        }
      }
    },
    {
      "name": "üìã Step 4: List Generated Reports",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('üìã Executing: Report List Validation');",
              "",
              "if (pm.response.code === 200) {",
              "    const data = pm.response.json();",
              "    ",
              "    pm.test('‚úÖ Reports listed successfully', () => {",
              "        pm.expect(data.data).to.be.an('array');",
              "        ",
              "        // Verify our reports are in the list",
              "        const attendanceReport = data.data.find(r => r.id === pm.globals.get('attendanceReportId'));",
              "        const analyticsReport = data.data.find(r => r.id === pm.globals.get('analyticsReportId'));",
              "        ",
              "        pm.expect(attendanceReport).to.not.be.undefined;",
              "        pm.expect(analyticsReport).to.not.be.undefined;",
              "    });",
              "    ",
              "    console.log('‚úÖ Reports validated in list.');",
              "    console.log('‚û°Ô∏è  Proceeding to notification sending...');",
              "    postman.setNextRequest('üîî Step 5: Send Report Notification');",
              "} else {",
              "    pm.test('‚ùå Report listing failed', () => {",
              "        pm.expect.fail(`Report listing failed: ${pm.response.code}`);",
              "    });",
              "    postman.setNextRequest(null);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/reports?limit=50&status=completed",
          "host": ["{{baseUrl}}"],
          "path": ["reports"],
          "query": [
            { "key": "limit", "value": "50" },
            { "key": "status", "value": "completed" }
          ]
        }
      }
    },
    {
      "name": "üîî Step 5: Send Report Notification",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('üîî Executing: Report Notification');",
              "",
              "if (pm.response.code === 200) {",
              "    const data = pm.response.json();",
              "    ",
              "    pm.test('‚úÖ Report notification sent successfully', () => {",
              "        pm.expect(data.success).to.be.true;",
              "    });",
              "    ",
              "    console.log('‚úÖ Report notification sent successfully!');",
              "    console.log('üéâ Reporting Workflow completed!');",
              "    console.log('');",
              "    console.log('üìã Reporting Summary:');",
              "    console.log('   üÜî Workflow ID:', pm.globals.get('reportWorkflowId'));",
              "    console.log('   üë§ User ID:', pm.globals.get('userId'));",
              "    console.log('   üìä Attendance Report ID:', pm.globals.get('attendanceReportId'));",
              "    console.log('   üìà Analytics Report ID:', pm.globals.get('analyticsReportId'));",
              "    console.log('   üîî Notification: ‚úÖ Sent');",
              "    console.log('');",
              "    console.log('üéØ Reports generated and distributed successfully!');",
              "    ",
              "    postman.setNextRequest(null);",
              "} else {",
              "    pm.test('‚ùå Report notification failed', () => {",
              "        pm.expect.fail(`Notification failed: ${pm.response.code}`);",
              "    });",
              "    console.log('‚ùå Notification failed, but reports were generated successfully.');",
              "    postman.setNextRequest(null);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \"recipients\": [\"{{userId}}\"],\\n  \"type\": \"report_ready\",\\n  \"channels\": [\"email\", \"in_app\"],\\n  \"title\": \"Reports Generated Successfully\",\\n  \"message\": \"Your requested reports have been generated and are ready for download.\",\\n  \"data\": {\\n    \"workflowId\": \"{{reportWorkflowId}}\",\\n    \"attendanceReportId\": \"{{attendanceReportId}}\",\\n    \"analyticsReportId\": \"{{analyticsReportId}}\",\\n    \"reportCount\": 2\\n  },\\n  \"priority\": \"normal\"\\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/notifications/send",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "send"]
        }
      }
    }
  ]
}