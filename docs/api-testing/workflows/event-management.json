{
  "info": {
    "name": "Event Management Workflow",
    "description": "Event-focused workflow: Login â†’ Create Event â†’ Generate QR â†’ Manage Attendance. Assumes user already exists.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Initialize event management data",
          "if (!pm.globals.get('eventWorkflowId') || pm.info.requestName.includes('Step 1')) {",
          "    const timestamp = Date.now();",
          "    const eventWorkflowId = 'event_' + timestamp;",
          "    pm.globals.set('eventWorkflowId', eventWorkflowId);",
          "    console.log('ðŸš€ Starting Event Management Workflow:', eventWorkflowId);",
          "    ",
          "    // Use existing test credentials or set defaults",
          "    if (!pm.globals.get('testEmail')) {",
          "        pm.globals.set('testEmail', 'existing-user@example.com');",
          "        pm.globals.set('testPassword', 'ExistingPassword123!');",
          "    }",
          "}",
          "",
          "console.log('ðŸ“ Current Step:', pm.info.requestName);"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{baseUrl}}",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "ðŸ” Step 1: Login User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('ðŸ” Executing: User Login for Event Management');",
              "",
              "if (pm.response.code === 200) {",
              "    const data = pm.response.json();",
              "    ",
              "    pm.globals.set('accessToken', data.accessToken);",
              "    pm.globals.set('refreshToken', data.refreshToken);",
              "    pm.globals.set('tokenExpiry', new Date().getTime() + (data.expiresIn * 1000));",
              "    pm.globals.set('userId', data.user.id);",
              "    ",
              "    pm.test('âœ… Login successful', () => {",
              "        pm.expect(data.accessToken).to.be.a('string');",
              "        pm.expect(data.user.id).to.be.a('string');",
              "    });",
              "    ",
              "    console.log('âœ… Login complete. Proceeding to event creation...');",
              "    postman.setNextRequest('ðŸ“… Step 2: Create Event');",
              "} else {",
              "    pm.test('âŒ Login failed', () => {",
              "        pm.expect.fail(`Login failed: ${pm.response.code}`);",
              "    });",
              "    console.log('âŒ Login failed. Please check credentials or run onboarding first.');",
              "    postman.setNextRequest(null);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "auth": { "type": "noauth" },
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \"email\": \"{{testEmail}}\",\\n  \"password\": \"{{testPassword}}\",\\n  \"rememberMe\": false\\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "ðŸ“… Step 2: Create Event",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "console.log('ðŸ“… Executing: Event Creation');",
              "",
              "if (pm.response.code === 201) {",
              "    const data = pm.response.json();",
              "    ",
              "    pm.globals.set('eventId', data.data.id);",
              "    ",
              "    pm.test('âœ… Event created successfully', () => {",
              "        pm.expect(data.data.id).to.be.a('string');",
              "        pm.expect(data.data.title).to.include('Event Management Test');",
              "    });",
              "    ",
              "    console.log('âœ… Event created. ID:', data.data.id);",
              "    console.log('âž¡ï¸  Proceeding to QR code generation...');",
              "    postman.setNextRequest('ðŸ“± Step 3: Generate QR Code');",
              "} else {",
              "    pm.test('âŒ Event creation failed', () => {",
              "        pm.expect.fail(`Event creation failed: ${pm.response.code}`);",
              "    });",
              "    postman.setNextRequest(null);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
