{
  "name": "ðŸ”” Notifications",
  "description": "Notification management and delivery endpoints",
  "item": [
    {
      "name": "Get My Notifications",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/notifications/my-notifications?page=1&limit=20&unreadOnly=false",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "my-notifications"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "20" },
            { "key": "unreadOnly", "value": "false" }
          ]
        }
      }
    },
    {
      "name": "Mark Notification as Read",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/notifications/mark-read/{{notificationId}}",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "mark-read", "{{notificationId}}"]
        }
      }
    },
    {
      "name": "Mark All Notifications as Read",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/notifications/mark-all-read",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "mark-all-read"]
        }
      }
    },
    {
      "name": "Get Notification Preferences",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/notifications/preferences",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "preferences"]
        }
      }
    },
    {
      "name": "Update Notification Preferences",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": {\n    \"enabled\": true,\n    \"eventReminders\": true,\n    \"attendanceAlerts\": true,\n    \"systemUpdates\": false\n  },\n  \"push\": {\n    \"enabled\": true,\n    \"eventReminders\": true,\n    \"attendanceAlerts\": true,\n    \"systemUpdates\": false\n  },\n  \"sms\": {\n    \"enabled\": false,\n    \"eventReminders\": false,\n    \"attendanceAlerts\": false,\n    \"systemUpdates\": false\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/notifications/preferences",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "preferences"]
        }
      }
    },
    {
      "name": "Configure Push Notifications",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"deviceToken\": \"device-token-123\",\n  \"platform\": \"web\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/notifications/push/configure",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "push", "configure"]
        }
      }
    },
    {
      "name": "Send Notification",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recipients\": [\"{{userId}}\"],\n  \"type\": \"event_reminder\",\n  \"channels\": [\"email\", \"push\"],\n  \"title\": \"Event Reminder\",\n  \"message\": \"Don't forget about the team meeting tomorrow at 10 AM\",\n  \"data\": {\n    \"eventId\": \"{{eventId}}\",\n    \"eventTitle\": \"Team Meeting\"\n  },\n  \"priority\": \"normal\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/notifications/send",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "send"]
        }
      }
    },
    {
      "name": "Send Bulk Notification",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recipients\": [\"user1\", \"user2\", \"user3\"],\n  \"type\": \"system_announcement\",\n  \"channels\": [\"email\", \"push\"],\n  \"title\": \"System Maintenance\",\n  \"message\": \"The system will be under maintenance tonight from 2 AM to 4 AM\",\n  \"priority\": \"high\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/notifications/send-bulk",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "send-bulk"]
        }
      }
    },
    {
      "name": "Send Email Notification",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recipients\": [\"user@example.com\"],\n  \"subject\": \"Event Reminder\",\n  \"htmlContent\": \"<h1>Don't forget!</h1><p>Team meeting tomorrow at 10 AM</p>\",\n  \"textContent\": \"Don't forget! Team meeting tomorrow at 10 AM\",\n  \"templateId\": \"event_reminder\",\n  \"templateData\": {\n    \"eventTitle\": \"Team Meeting\",\n    \"eventDate\": \"2024-12-01\",\n    \"eventTime\": \"10:00 AM\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/notifications/send-email",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "send-email"]
        }
      }
    },
    {
      "name": "Get Notification Stats",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/notifications/stats?startDate=2024-01-01T00:00:00Z&endDate=2024-12-31T23:59:59Z",
          "host": ["{{baseUrl}}"],
          "path": ["notifications", "stats"],
          "query": [
            { "key": "startDate", "value": "2024-01-01T00:00:00Z" },
            { "key": "endDate", "value": "2024-12-31T23:59:59Z" }
          ]
        }
      }
    }
  ]
}