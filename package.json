{
  "name": "attendance-management-system",
  "description": "Système de gestion des présences",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:backend": "cd backend && firebase emulators:start --only functions,firestore,storage",
    "dev:frontend": "cd frontend-v2 && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "cd backend/functions && npm run build",
    "build:frontend": "cd frontend-v2 && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "test:backend": "cd backend/functions && npm test",
    "test:frontend": "cd frontend-v2 && npm test",
    "test:e2e": "cypress run",
    "lint:backend": "cd backend/functions && npm run lint",
    "lint:frontend": "cd frontend-v2 && npm run lint",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "deploy": "firebase deploy",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cypress": "^15.8.1",
    "firebase-tools": "^12.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
