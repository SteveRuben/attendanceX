{
  "name": "functions",
  "version": "1.0.0",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint src/**/*.ts --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "cd .. && firebase emulators:start --only functions,firestore,auth",
    "serve": "npm run build && firebase emulators:start --only functions,firestore,auth",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test:env": "npx ts-node src/check/test-env.ts",
    "test:cors": "npx ts-node src/check/test-cors.ts",
    "test:email": "npx ts-node src/check/test-email-config.ts",
    "test:smtp": "npx ts-node src/check/test-smtp-direct.ts",
    "setup:test-email": "npx ts-node src/check/setup-test-email.ts",
    "docs:generate": "npx ts-node src/scripts/generate-swagger-docs.ts",
    "docs:serve": "npm run build && npm run docs:generate && npm run dev",
    "docs:build": "npm run build && npm run docs:generate",
    "migrate:organizations": "npx ts-node src/scripts/run-migration.ts run",
    "migrate:organizations:dry-run": "npx ts-node src/scripts/run-migration.ts run --dry-run",
    "migrate:organizations:rollback": "npx ts-node src/scripts/run-migration.ts rollback",
    "migrate:organizations:status": "npx ts-node src/scripts/run-migration.ts status",
    "migrate:organizations:validate": "npx ts-node src/scripts/run-migration.ts validate"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@attendance-x/shared": "file:../shared",
    "@aws-sdk/client-sns": "^3.840.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "@types/bcrypt": "^5.0.2",
    "@types/nodemailer": "^6.4.17",
    "@types/sharp": "^0.31.1",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^6.0.0",
    "commander": "^12.1.0",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^8.1.0",
    "libphonenumber-js": "^1.12.9",
    "mammoth": "^1.9.1",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.15.2",
    "sharp": "^0.34.2",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "twilio": "^5.7.2"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/dotenv": "^6.1.1",
    "@types/morgan": "^1.9.10",
    "@types/pdfkit": "^0.13.4",
    "@types/speakeasy": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "private": true
}
